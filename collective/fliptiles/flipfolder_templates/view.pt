<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      lang="en"
      metal:use-macro="context/main_template/macros/master"
      i18n:domain="collective.fliptiles">
<body>

<metal:main fill-slot="main">
    <tal:main-macro metal:define-macro="main">

        <tal:outter tal:define="tiles view/getTiles">
          <ul id="foldertiles">
            <tal:inner tal:repeat="tile tiles">
              <li>
                <img src="#" tal:attributes="src string:${tile/absolute_url}/@@download/picture" />
                <div>
                  <h3><span tal:replace="tile/title" /></h3>
                  <!--Need to grab URL from relation-->
                  <p><a href="#" tal:attributes="href tile/absolute_url"><span tal:replace="tile/to_object/Title | nothing" /></a></p>
                </div>
              </li>
            </tal:inner>
          </ul>
        </tal:outter>

        <!--<span tal:replace="structure view/getTileTemplate" />-->

    </tal:main-macro>
</metal:main>

</body>
</html>